@{
    Layout = null;
}

@using Core_Proje.Areas.Writer.Models
@model UserRegisterViewModel

<!DOCTYPE html>
<html lang="en">

<div>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>Skydash Admin</title>
        <!-- plugins:css -->
        <link rel="stylesheet" href="~/WriterTemplate/vendors/feather/feather.css">
        <link rel="stylesheet" href="~/WriterTemplate/vendors/ti-icons/css/themify-icons.css">
        <link rel="stylesheet" href="~/WriterTemplate/vendors/css/vendor.bundle.base.css">
        <!-- endinject -->
        <!-- Plugin css for this page -->
        <!-- End plugin css for this page -->
        <!-- inject:css -->
        <link rel="stylesheet" href="~/WriterTemplate/css/vertical-layout-light/style.css">
        <!-- endinject -->
        <link rel="shortcut icon" href="~/WriterTemplate/images/favicon.png" />
    </head>
</div>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/WriterTemplate/images/logo.svg" alt="logo">
                            </div>
                            <h4>KAYIT SAYFASI</h4>
                            <h6 class="font-weight-light">Bir kaç adımda kayıt ol ve başla ...</h6>

                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <label>Adınız</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    @* <input type="text" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Username">*@
                                    <input type="text" asp-for="Name" class="form-control form-control-lg" placeholder="Atıf Ertuğrul" />
                                </div>
                                <div class="form-group">
                                    <label>Soyadınız</label>
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                    <input type="text" asp-for="Surname" class="form-control form-control-lg" placeholder="Kan" />
                                </div>
                                <div class="form-group">
                                    <label>Kullanıcı Adı</label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                    @* <input type="text" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Username">*@
                                    <input type="text" asp-for="UserName" class="form-control form-control-lg" placeholder="atifertugrul.kan" />
                                </div>
                                <div class="form-group">
                                    <label>Resim Yolu (jpg)</label>
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                    <input type="text" asp-for="ImageUrl" class="form-control form-control-lg" placeholder="C:\Users\Template\images.jpg" />
                                </div>
                                <div class="form-group">
                                    <label>Şifreniz</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <input type="text" asp-for="Password" class="form-control form-control-lg" placeholder="Harf, Rakam ve Karakter içeren 6 karakterli ör:Abc123!?" />
                                </div>
                                <div class="form-group">
                                    <label>Şifreniz Tekrar</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    <input type="text" asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="Parolayı tekrar giriniz" />
                                </div>
                                <div class="form-group">
                                    <label>Mail Adresiniz</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <input type="text" asp-for="Email" class="form-control form-control-lg" placeholder="atifertugrul.kan@nvi.gov.tr" />
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly">
                                    @*Form-Validasyon işlem hataları burada listelenecek*@
                                </div>
                                <div class="mt-3">
                                    @*<a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" asp-action="Index">Kayıt Ol</a>*@
                                    <button class="btn btn-primary">Kayıt Ol</button>
                                </div>
                                @* <div class="text-center mt-4 font-weight-light">
                                    Already have an account? <a href="login.html" class="text-primary">Login</a>
                                    </div>*@
                            </form>

                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/WriterTemplate/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/WriterTemplate/js/off-canvas.js"></script>
    <script src="~/WriterTemplate/js/hoverable-collapse.js"></script>
    <script src="~/WriterTemplate/js/template.js"></script>
    <script src="~/WriterTemplate/js/settings.js"></script>
    <script src="~/WriterTemplate/js/todolist.js"></script>
    <!-- endinject -->
</body>

</html>