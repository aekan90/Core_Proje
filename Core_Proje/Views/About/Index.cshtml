@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using EntityLayer.Concrete
@model About


<div class="card-header border-0">
    <h3 class="mb-0">Hakkımda Sayfası Güncelleme</h3>
    <div class="card-body">
        
        <form class="form-group" method="post">

            <div class="form-group mb-3">
                <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                    </div>
                    <input class="form-control" value="@Model.AboutId" type="hidden" name="AboutId">
                    <input class="form-control" placeholder="@Model.Title" type="text" name="Title">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                    </div>
                    <input class="form-control" placeholder="@Model.Description" type="text" name="Description">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                    </div>
                    <input class="form-control" placeholder="@Model.Age" type="text" name="Age">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                    </div>
                    <input class="form-control" placeholder="@Model.Mail" type="text" name="Mail">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                    </div>
                    <input class="form-control" placeholder="@Model.Phone" type="text" name="Phone">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                    </div>
                    <input class="form-control" placeholder="@Model.Address" type="text" name="Address">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                    </div>
                    <input class="form-control" placeholder="@Model.ImageUrl" type="text" name="ImageUrl">
                </div>
            </div>


            <div class="text-left">
                <button class="btn btn-primary my-4">Güncelle</button>
            </div>
        </form>
    </div>
</div>

<!-- Light table -->
<div class="table-responsive">
</div>
<br />


