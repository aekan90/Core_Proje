@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using EntityLayer.Concrete
@model Feature


<div class="card-header border-0">
    <h3 class="mb-0">Öne Çıkan Sayfası Güncelleme</h3>
    <div class="card-body">
        <form class="form-group" method="post">
            <div class="form-group mb-3">
                <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                    </div>
                    <input class="form-control" value="@Model.FeatureID" type="hidden" name="FeatureID">
                    <input class="form-control" placeholder="@Model.Header" type="text" name="Header">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                    </div>
                    <input class="form-control" placeholder="@Model.Name" type="text" name="Name">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                    </div>
                    <input class="form-control" placeholder="@Model.Title" type="text" name="Title">
                </div>
            </div>
            <div class="text-left">
                <button class="btn btn-primary my-4">Güncelle</button>
            </div>
        </form>
    </div>
</div>

<!-- Light table -->
<div class="table-responsive">
</div>
<br />
