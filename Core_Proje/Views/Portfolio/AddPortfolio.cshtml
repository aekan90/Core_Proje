@{
    ViewData["Title"] = "AddPortfolio";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Proje Ekleme</h3>
    <div class="card-body">
        <form class="form-group" method="post">

            <div class="form-group mb-3">
                <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                    </div>
                    <input class="form-control" placeholder="Proje Adı" type="text" name="Name">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                    </div>
                    <input class="form-control" placeholder="Resim Yolu (.jpg)" type="text" name="ImageUrl">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                    </div>
                    <input class="form-control" placeholder="Küçük Resim Yolu (.png)" type="text" name="SmallImageUrl">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                    </div>
                    <input class="form-control" placeholder="Proje URL Adresi" type="text" name="Url">
                </div>
            </div>

            <div class="text-left">
                <button class="btn btn-primary my-4">Proje Ekle</button>
            </div>
        </form>
    </div>
</div>
<!-- Light table -->
<div class="table-responsive">
</div>
<br />


