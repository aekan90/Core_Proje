@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using EntityLayer.Concrete
@model List<Portfolio>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> RESİM </th>
                                <th> PROJE ADI </th>
                                <th> URL </th>
                                <th> DENEYİM SİL </th>
                                <th> DENEYİM DÜZENLE </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th>
                                        @item.PortfolioId
                                    </th>
                                    <td class="budget">
                                        <img src="@item.ImageUrl" width="48" height="48" alt="ui-ux" />
                                    </td>
                                    <td>  @item.Name </td>
                                    <td> @item.Url </td>
                                    <td> <a href="/Portfolio/EditPortfolio/@item.PortfolioId" class="btn btn-outline-warning btn-fw">Düzenle</a> </td>
                                    <td> <a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-outline-danger btn-fw">Sil</a> </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <a href="/Portfolio/AddPortfolio" class="btn btn-outline-success btn-fw">Yeni Proje Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>


