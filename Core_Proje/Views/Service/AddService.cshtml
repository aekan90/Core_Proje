@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card-header border-0">
    <h3 class="mb-0">Hizmet Ekleme</h3>
    <div class="card-body">

        <form class="form-group" method="post">

            <div class="form-group mb-3">
                <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                    </div>
                    <input class="form-control" placeholder="Hizmet Adı" type="text" name="Title">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                    </div>
                    <input class="form-control" placeholder="Resim Yolu (.svg)" type="text" name="ImageUrl">
                </div>
            </div>

            <div class="text-left">
                <button class="btn btn-primary my-4">Deneyim Ekle</button>
            </div>
        </form>
    </div>
</div>
<!-- Light table -->
<div class="table-responsive">
</div>
