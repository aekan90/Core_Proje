@using EntityLayer.Concrete
@model List<Portfolio>



<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Order Status</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th> Client Name </th>
                                <th> Resim Yolu </th>
                                <th> Küçük Resim Yolu </th>
                                <th> Proje URL </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                       @item.PortfolioId
                                    </td>
                                    <td>
                                        <img src="@item.ImageUrl" alt="image" />
                                        <span class="pl-2">@item.Name</span>
                                    </td>
                                    <td> @item.ImageUrl </td>
                                    <td> @item.SmallImageUrl </td>
                                    <td> @item.Url </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>