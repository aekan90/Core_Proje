@using EntityLayer.Concrete
@model List<Portfolio>



<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Proje Listesi ve Durumu</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th> Proje Adı </th>
                                <th> Resim Yolu </th>
                                <th> Proje URL </th>
                                <th> Proje Durumu </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.PortfolioId
                                    </td>
                                    <td>
                                        <img src="@item.ImageUrl" alt="image" />
                                        <span class="pl-2">@item.Name</span>
                                    </td>
                                    <td> @item.ImageUrl </td>
                                    <td> @item.Url </td>

                                    <td>
                                        @if (@item.Status)
                                        {
                                            <div class="badge badge-outline-success">Approved</div>
                                        }
                                        else
                                        {
                                            <div class="badge badge-outline-warning">Pending</div>
                                        }
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>