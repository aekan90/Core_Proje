@{
    Layout = null;
}

@*
    Bu Layoutu kullanan view lar

    /Views
    
    Feature/index.cshtml
    Skill/index.cshtml
    Skill/AddSkill.cshtml

*@

<!DOCTYPE html>
<html>

<!-- Head Alanı -- AdminController/PartialHead -->
@await Html.PartialAsync("/Views/Admin/PartialHead.cshtml")

<body>
    <!-- Sidenav -->
    <nav class="sidenav navbar navbar-vertical  fixed-left  navbar-expand-xs navbar-light bg-white" id="sidenav-main">
        <div class="scrollbar-inner">
            <!-- Brand -->
            <div class="sidenav-header  align-items-center">
                <a class="navbar-brand" href="javascript:void(0)">
                    <img src="~/Admin/assets/img/brand/blue.png" class="navbar-brand-img" alt="...">
                </a>
            </div>
            <!-- Sol Menü - SideBar -->
            @await Html.PartialAsync("/Views/Admin/PartialSideBar.cshtml")
        </div>
    </nav>
    <!-- Main content -->
    <div class="main-content" id="panel">

        <!-- Topnav -->
        @await Html.PartialAsync("/Views/Admin/PartialNavBar.cshtml")

        <!-- Header -->
        <div class="header bg-primary pb-6">
            <div class="container-fluid">
                <div class="header-body">
                    <div class="row align-items-center py-4">
                        <div class="col-lg-6 col-7">
                            <h6 class="h2 text-white d-inline-block mb-0">Yetenek</h6>
                            <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                                <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                                    <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                                    <li class="breadcrumb-item"><a href="/Skill">Skill</a></li>
                                    <li class="breadcrumb-item active" aria-current="page"><a href="/Skill/AddSkill">Add Skill</a></li>
                                </ol>
                            </nav>
                        </div>
                         
                    </div>
                </div>
            </div>
        </div>

        <!-- Page content -->
        <div class="container-fluid mt--6">
            <div class="row">
                <div class="col">
                    @RenderBody() <!-- Layouta bağlı olarak çalışacak sayfaların nereye geleceğini gösterir -->
                </div>
            </div>

            <!-- Footer -->
            @await Html.PartialAsync("/Views/Admin/PartialFooter.cshtml")

        </div>
    </div>
    <!-- Admin Scripts -- AdminController/Scripts-->
    @await Html.PartialAsync("/Views/Admin/PartialScript.cshtml")
</body>
</html>

