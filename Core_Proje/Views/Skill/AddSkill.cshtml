@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Yetenek Ekleme</h3>
    <div class="card-body">
        <form class="form-group" method="post">
            <div class="form-group mb-3">
                <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                    </div>
                    <input class="form-control" placeholder="Yetenek Adı" type="text" name="Title">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                    </div>
                    <input class="form-control" placeholder="Yetenek Puanı (0-100)" type="text" name="Value">
                </div>
            </div>

            <div class="text-left">
                <button class="btn btn-primary my-4">Yetenek Ekle</button>
            </div>
        </form>
    </div>
</div>
<!-- Light table -->
<div class="table-responsive">
</div>
