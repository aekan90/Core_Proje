@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using EntityLayer.Concrete
@model List<Skill>

@foreach (var item in Model)
{
    <div class="card-header border-0">
        <h3 class="mb-0">Yetenek Güncelleme</h3>
        <div class="card-body">
            <form class="form-group" method="post">
                <div class="form-group mb-3">
                    <div class="input-group input-group-merge input-group-alternative">
                        <div class="input-group-prepend">
                            <span class="input-group-text"></span>
                        </div>
                        <input class="form-control" value="@item.SkillId" type="hidden" name="SkillId">
                        <input class="form-control" placeholder="@item.Title" type="text" name="Title">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group input-group-merge input-group-alternative">
                        <div class="input-group-prepend">
                            <span class="input-group-text"></span>
                        </div>
                        <input class="form-control" placeholder="@item.Value" type="text" name="Value">
                    </div>
                </div>
                <div class="text-left">
                    <button class="btn btn-primary my-4">Yetenek Güncelle</button>
                </div>
            </form>
        </div>
    </div>
}
<!-- Light table -->
<div class="table-responsive">
</div>
<br />
